<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorScreen"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Asıl olan hayattır, hayatta Beşiktaş’tır."
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/img_12_aboubakar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/eage" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:paddingLeft="20dp"
            android:text="Vincent Aboubakar"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="22 Ocak 1992 tarihinde Kamerun’da dünyaya geldi. 183 cm boyundaki forvet; Valenciennes, Lorient ve Porto formaları giydi. 2016-17 sezonunda formamızı giyen ve siyah-beyazlılarımızın o sezon kazandığı Süper Lig şampiyonluğunda pay sahibi olan Vincent Aboubakar, 2020-21 sezonu başında Beşiktaşımız ile yeniden sözleşme imzaladı."
        android:textAllCaps="true"
        android:textColor="#000000" />
</LinearLayout>